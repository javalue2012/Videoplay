@section slide{
    <!-- banner -->
    <div id="slidey" style="display:none;">
        <ul>
            @foreach (var item in Slides)
            {
                <li><img src="@item.Image" alt=" "><div><p class='title' with="250">@item.Name</p></div><p class='description'>@item.Description</p></li>

            }

        </ul>
    </div>
    <script src="~/assets/web/js/jquery.slidey.js"></script>
    <script src="~/assets/web/js/jquery.dotdotdot.min.js"></script>
    <script type="text/javascript">
        $("#slidey").slidey({
            interval: 8000,
            listCount: 5,
            autoplay: false,
            showList: true
        });
        $(".slidey-list-description").dotdotdot();
    </script>
    <!--End banner -->
}
